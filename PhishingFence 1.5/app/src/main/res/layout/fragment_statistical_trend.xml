<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.StatisticalTrendFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="70dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trend of incoming international\nstudents in Australia"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_border"

                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_option"
                    android:layout_width="350dp"
                    android:layout_height="48dp"
                    android:layout_margin="10dp"

                    style="@style/SpinnerTheme"
                    />





            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="Here is the description of pictures"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:textColor="@color/darkBlue"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

<!--                    <TextView-->
<!--                        android:id="@+id/tv_des"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="48dp"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:text="Description"-->
<!--                        android:textSize="20sp"-->
<!--                        android:textColor="@color/darkBlue"-->
<!--                        android:textStyle="italic"-->

<!--                        android:gravity="center" />-->


                    <!-- Surround the Description button and arrow buttons with a horizontal LinearLayout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/btnLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="＜"
                            android:layout_marginTop="0dp"
                            android:textSize="18sp"


                            android:textStyle="italic"

                            android:layout_marginRight="20dp" />

                        <Button
                            android:id="@+id/tv_des"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginTop="0dp"
                            android:text="Description"
                            android:textSize="20sp"
                            android:textStyle="italic"
                            android:gravity="center"
                            /> <!-- 添加这个以保持按钮按压效果 --><!-- Ensure you have a drawable for the button background -->

                        <Button
                            android:id="@+id/btnRight"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="＞"
                            android:layout_marginTop="0dp"
                            android:textSize="18sp"


                            android:layout_marginLeft="20dp" />
                    </LinearLayout>





                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/baseline_arrow_back_ios_24" />

</RelativeLayout>